<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Score:0"
            android:layout_width="154dp"
            android:layout_height="48dp"
            android:id="@+id/score_text"
            android:textSize="18sp" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/time_text"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="Time: 15"
            android:layout_width="154dp"
            android:layout_height="48dp"
            android:id="@+id/time_text"
            android:textSize="24sp" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            app:layout_constraintTop_toBottomOf="@+id/score_text" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">


        <ImageView
                android:onClick="increaseScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView1"
                android:layout_row="0"
                android:layout_column="0" tools:ignore="OnClick"/>
        <ImageView
                android:onClick="increaseScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView2"
                android:layout_row="0"
                android:layout_column="1" tools:ignore="OnClick"/>


        <ImageView
                android:onClick="increaseScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView3"
                android:layout_row="0"
                android:layout_column="2" tools:ignore="OnClick"/>
        <ImageView
                android:onClick="increaseScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView4"
                android:layout_row="1"
                android:layout_column="0" tools:ignore="OnClick"/>
        <ImageView
                android:onClick="increaseScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView5"
                android:layout_row="1"
                android:layout_column="1" tools:ignore="OnClick"/>

        <ImageView
                android:onClick="increaseScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView6"
                android:layout_row="1"
                android:layout_column="2" tools:ignore="OnClick"/>
        <ImageView
                android:onClick="increaseScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView7"
                android:layout_row="2"
                android:layout_column="0" tools:ignore="OnClick"/>


        <ImageView
                android:onClick="increaseScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView8"
                android:layout_row="2"
                android:layout_column="1" tools:ignore="OnClick"/>
        <ImageView
                android:onClick="increaseScore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView9"
                android:layout_row="2"
                android:layout_column="2" tools:ignore="OnClick"/>


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>